{
  "builds": [
      {
          "src": "blood_bank/wsgi.py",
          "use": "@vercel/python",
          "config": {
              "maxLambdaSize": "15mb",
              "runtime": "python3.11",
              "includeFiles": [
                  "**/*.py",
                  "staticfiles/**",
                  "blood/static/**",
                  "user/static/**"
              ]
          }
      }
  ],
  "routes": [
      {
          "src": "/static/(.*)",
          "dest": "/staticfiles/$1"
      },
      {
          "src": "/(.*)",
          "dest": "blood_bank/wsgi.py"
      }
  ]
}